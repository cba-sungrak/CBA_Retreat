<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="attend"
            type="kr.or.sungrak.cba.cba_retreat.models.AttendInfo" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="@{attend.active ? View.VISIBLE : View.GONE}">

        <LinearLayout
            style="@style/GBSContentMember"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gbs_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/gbs_name + attend.name}"
                android:textColor="@android:color/black"
                android:typeface="serif" />

            <TextView
                android:id="@+id/gbs_member_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/gbs_age + attend.mobile}"
                android:textColor="@android:color/black"
                android:typeface="serif" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="@{attend.status==1 ? true : false}" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name" />

        </LinearLayout>
    </LinearLayout>
</layout>
