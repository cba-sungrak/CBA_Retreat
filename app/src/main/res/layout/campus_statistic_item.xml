<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="statistic"
            type="kr.or.sungrak.cba.cba_retreat.models.CampusStatisticList.CampusStatisticInfo" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/GBSContentMember"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/statistic_campus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{statistic.campus+`  `}"
                android:textColor="@android:color/black"
                android:typeface="serif" />

            <TextView
                android:id="@+id/statistic_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{statistic.registered+` / `+statistic.attended+`  `}"
                android:textColor="@android:color/black"
                android:typeface="serif" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/statistic_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{`  `+statistic.percent}"
                android:textColor="@android:color/black"
                android:typeface="serif" />

        </LinearLayout>
    </LinearLayout>
</layout>
