<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="gbs"
            type="kr.or.sungrak.cba.cba_retreat.models.GBSInfo" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"

        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="조장 조원 확인"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="10dp"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/GBSPosition"
                android:text="단계" />


            <LinearLayout style="@style/GBSContent">

                <TextView
                    android:id="@+id/gbs_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{gbs.gbsLevel}" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp">

            <TextView
                style="@style/GBSPosition"
                android:typeface="serif"
                android:text="조장" />


            <LinearLayout style="@style/GBSContent">

                <TextView
                    android:id="@+id/gbs_leader_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{@string/gbs_name + gbs.leader.name}" />

                <TextView
                    android:id="@+id/gbs_leader_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{@string/gbs_age + gbs.leader.age}" />

                <TextView
                    android:id="@+id/gbs_leader_campus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{@string/gbs_campus + gbs.leader.campus}" />

                <TextView
                    android:id="@+id/gbs_leader_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{@string/gbs_mobile + gbs.leader.mobile}" />
            </LinearLayout>
        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/gbs_member_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical" />

    </LinearLayout>
</layout>

