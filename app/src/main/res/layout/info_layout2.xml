<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/infobackground"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="40dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_weight="10"
                        android:layout_width="0dp"
                        android:layout_height="0dp" />

                    <ImageButton
                        android:layout_weight="1"
                        android:id="@+id/location"
                        android:layout_width="120dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:background="#00000000"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/ansan" />

                    <ImageButton
                        android:id="@+id/callCarBtn"
                        android:layout_weight="1"
                        android:layout_width="120dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:background="#00000000"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/car" />

                    <ImageButton
                        android:id="@+id/callStaffBtn"
                        android:layout_width="120dp"
                        android:layout_height="6dp"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/center" />
                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="0dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/youtubeButton"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:background="#00000000"
            app:srcCompat="@drawable/youtube" />
        <ImageButton
            android:id="@+id/instButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:background="#00000000"
            app:srcCompat="@drawable/instagram" />
        <ImageButton
            android:id="@+id/webButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:background="#00000000"
            app:srcCompat="@drawable/safari" />
        <ImageButton
            android:id="@+id/blogButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:background="#00000000"
            app:srcCompat="@drawable/blog" />

    </LinearLayout>

</LinearLayout>


