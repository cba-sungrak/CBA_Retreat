<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="500dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/select_dialog_title"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/selected_dialog_title" />

    <View
        android:layout_width="30dp"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:background="@android:color/black" />

    <ImageView
        android:id="@+id/selectSungrak"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/sr_selected_banner" />

    <ImageView
        android:id="@+id/selectCBA"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/cba_selected_banner" />

    <ImageView
        android:id="@+id/selectBWM"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/bwm_selected_banner" />

    <View
        android:layout_width="30dp"
        android:layout_height="200dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
 />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="클릭하면 해당 수련회로 변경이 됩니다." />


</LinearLayout>